<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_group"
    android:background="@drawable/background_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:id="@+id/circleView_avatar" />
     <TextView
         android:transitionName="tv_singer"
         android:id="@+id/tv_singer"
         android:layout_width="wrap_content"
         app:layout_constraintHeight_max="40dp"
         android:text="Animation"
         android:textColor="#FFFF"
         android:textSize="20dp"
         android:layout_marginTop="5dp"
         app:layout_constraintTop_toBottomOf="@id/circleView_avatar"
         app:layout_constraintRight_toRightOf="@id/circleView_avatar"
         app:layout_constraintLeft_toLeftOf="@id/circleView_avatar"
         android:layout_height="0dp" />
    <TextView
        android:id="@+id/tv_song"
        android:textColor="#FFFF"

        android:textSize="25dp"
        android:layout_width="wrap_content"
        app:layout_constraintHeight_max="40dp"
        android:text="Animatisldfkdskfdsfkjjon"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_singer"
        app:layout_constraintRight_toRightOf="@id/circleView_avatar"
        app:layout_constraintLeft_toLeftOf="@id/circleView_avatar"
        android:layout_height="0dp" />
    <TextView
        android:textColor="#FFFF"
        android:id="@+id/tv_lir"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        app:layout_constraintHeight_max="40dp"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:gravity="center"

        android:text="Animatisldfkdskfdlfkdskfsdkjfksdjkfjsdkj
        fksdjfkjsdkjfsdkjfkjsdkfjsdkjfjsdjfsdjkkkksdjfjsdkjdsfkjjon"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="0dp" />


</android.support.constraint.ConstraintLayout>
